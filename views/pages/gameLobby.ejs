<!DOCTYPE html>
<html>

<head>
    <title>Sequence - Lobby</title>
    <% include ../partials/header.ejs %>
    <script type="text/javascript" src="/script/gameLobby.js"></script>
</head>

<body>

    <% include ../partials/nav.ejs %>

        <div class="row">
            <div class="col s1"></div>
            <div class="col s12 m6">
                <table class='bordered striped'>
                    <thead>
                        <tr>
                            <th>Game Name</th>
                            <th>Player Count</th>
                            <th id="refreshGames"><i class="material-icons blue-text lighten-2 right">loop</i></th>
                        </tr>
                    </thead>
                    <tbody id='gamesTable'>
                        <% include ../partials/games.ejs %>
                    </tbody>
                </table>
            </div>
            <div class="col s1"></div>
            <div class="col s6 m3">
                <div class="card blue darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Create Game</span>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="title" type="text" class="validate">
                                <label for="title">Game Name:</label>
                            </div>
                            <div class="input-field col s12">
                                <p>
                                    <input class="with-gap" name="group1" type="radio" id="2" />
                                    <label for="2" class="white-text">2 Players</label>
                                </p>
                                <p>
                                    <input class="with-gap" name="group1" type="radio" id="3" />
                                    <label for="3" class="grey-text disabled">3 Players</label>
                                </p>
                                <p>
                                    <input class="with-gap white" name="group1" type="radio" id="4" />
                                    <label for="4" class="white-text">4 Players</label>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="card-action">
                        <a id="CreateGame" href="#" class="waves-effect waves-light btn white-text blue">Create</a>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>